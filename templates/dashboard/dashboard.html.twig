                                <td>{{ loop.index }}</td>
                                <td>{{ userblock.user_id }}</td>
                                <td>{{ userblock.user_login }}</td>
                                <td>{{ userblock.user_name }}</td>
                                <td>{{ userblock.expires_at }}</td>
                                <td>{{ userblock.reason }}</td>
                                <td>{{ userblock.moderator_name }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
